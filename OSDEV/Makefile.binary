# -*- makefile -*-

build: build/kernel.bin

run: qemu
    
# run if source file changed
build/bin/extendedProgram.bin: src/extendedProgram.S src/lib/*.S
	mkdir -p build && \
	mkdir -p build/bin && \
	nasm -fbin $< -o $@

build/bin/bootloader.bin: src/bootloader.S src/lib/*.S
	mkdir -p build && \
	mkdir -p build/bin && \
	nasm -fbin $< -o $@

build/kernel.bin: build/bin/bootloader.bin build/bin/extendedProgram.bin
	cat $^ > $@

qemu:
	qemu-system-x86_64 build/kernel.bin

clean:
	rm  -rf build